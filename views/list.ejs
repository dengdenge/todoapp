      <div class="container">
      <ul class="list-group">
        <% for (var i = 0; i < posts.length; i++){ %>
        <li class="list-group-item">
          <p>글번호 : <%=posts[i]._id %> </p>
          <h4>할 일 : <%= posts[i].제목 %></h4>
          <p>마감날짜 : <%= posts[i].날짜 %></p>
          <button class="btn btn-danger delete" data-id="<%=posts[i]._id %>">삭제</button>
        </li>
        <% } %>        
      </ul>
    </div>

      <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

      <script>

          $('.delete').click(function (e){
            var num = e.target.dataset.id;
            var nowclick = $(this);

              $.ajax({
                method: 'DELETE',
                url: '/delete',
                data: { _id : num }
              }).done(function (result) {
                console.log('성공했어요');
                nowclick.parent('li').fadeOut();
                
              }).fail(function(a,b,c){
                console.log(a,b,c);
              });
        })

        
      </script> 
      

      
